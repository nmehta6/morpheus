{
  "name": "morpheus",
  "version": "0.0.1",
  "description": "A simple little library to transform data structures",
  "main": "./index.js",
  "scripts": {
    "babelify": "browserify index.js --standalone Morpheus --transform babelify --outfile dist/morpheus.js",
    "build": "npm run lint; npm run test",
    "lint": "jshint src test || true",
    "test": "mocha --compilers js:babel/register --check-leaks",
    "watch": "npm run build; chokidar src/**/*.js test/**/*.js -c 'npm run build' --polling --poll-interval 100 --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nmehta6/morpheus.git"
  },
  "keywords": [
    "automapper",
    "mapper",
    "transform",
    "map"
  ],
  "author": {
    "name": "Nachiket Mehta",
    "email": "nmehta6@gmail.com",
    "url": "https://github.com/nmehta6"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nmehta6/morpheus/issues"
  },
  "homepage": "https://github.com/nmehta6/morpheus#readme",
  "dependencies": {
    "jsonschema": "^1.0.2",
    "ramda": "^0.17.1"
  },
  "devDependencies": {
    "babel": "^5.8.5",
    "chai": "^3.0.0",
    "chokidar-cli": "^1.0.0",
    "jshint": "^2.8.0",
    "mocha": "^2.2.1"
  },
  "engine": {
    "node": ">=0.8"
  }
}
